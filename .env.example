# Quran Reels Maker - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# YOUTUBE API (required for uploads)
# =============================================================================
# Get these from Google Cloud Console
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# TELEGRAM APPROVAL (optional but recommended)
# =============================================================================
# Create a bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get your chat ID by messaging @userinfobot
TELEGRAM_CHAT_ID=your_chat_id_here
# Set to false to auto-upload without approval
APPROVAL_REQUIRED=true
# How long to wait for approval (in seconds)
APPROVAL_TIMEOUT_SECONDS=3600

# =============================================================================
# PEXELS API (for dynamic backgrounds)
# =============================================================================
# Get a free API key from https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# =============================================================================
# SCHEDULING
# =============================================================================
DAILY_POST_HOUR=6
DAILY_POST_MINUTE=0
TIMEZONE=Africa/Cairo

# =============================================================================
# CONTENT SETTINGS
# =============================================================================
# Default reciter (leave empty for random selection)
DEFAULT_RECITER=

# Friday mode - auto-post Surah Al-Kahf on Fridays
FRIDAY_MODE_ENABLED=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# SYSTEM PATHS (Windows)
# =============================================================================
# Path to ImageMagick binary (required for text overlays)
IMAGEMAGICK_BINARY=C:\Program Files\ImageMagick-7.1.2-Q16-HDRI\magick.exe

# Path to FFmpeg binary (auto-detected if in PATH)
# FFMPEG_BINARY=C:\ffmpeg\bin\ffmpeg.exe

# =============================================================================
# VISUAL ENHANCEMENTS
# =============================================================================
# Enable 3-second intro frame with surah title
ENABLE_INTRO_FRAME=true

# Enable subtle Ken Burns (slow zoom) effect on background
ENABLE_KEN_BURNS=true
